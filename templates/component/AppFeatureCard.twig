<article
  class="feature-card bg-white rounded-xl shadow-sm hover:shadow-lg transition-transform duration-200 ease-out hover:-translate-y-1 p-6 flex items-start gap-4"
  tabindex="0"
  aria-labelledby="feature-title-{{ feature.id }}"
>
  <div class="w-12 h-12 shrink-0 rounded-lg bg-cyan-50 flex items-center justify-center text-cyan-600">
    {% if feature.icon %}
      <img
        src="{{ feature.icon }}"
        alt="{{ feature.title }} icon"
        class="w-8 h-8"
      />
    {% else %}
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="w-6 h-6"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        stroke-width="2"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M9 12l2 2 4-4"
        />
      </svg>
    {% endif %}
  </div>

  <div class="flex-1">
    <h3
      id="feature-title-{{ feature.id }}"
      class="text-lg font-semibold text-gray-800"
    >
      {{ feature.title }}
    </h3>
    <p class="mt-2 text-gray-600 text-sm">{{ feature.desc }}</p>
  </div>
</article>
