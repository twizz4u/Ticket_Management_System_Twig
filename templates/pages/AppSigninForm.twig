<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>{{ title }}</title>
  <link rel="stylesheet" href="/css/output.css">
</head>

{% include 'component/AppNavbar.twig' %}
{% block content %}
<section class="sign-in max-h-screen bg-gradient-to-br from-cyan-100 via-blue-100 to-blue-300 scrollbar-hide">
  <div class="container mx-auto px-4 py-20">
    <div class="text-center mb-10">
      <h4 class="text-2xl font-bold text-cyan-700 mb-4">
        Sign in to access your account and manage your tickets efficiently.
      </h4>
    </div>
    
    {% if error %}
      <div class="mb-4 p-4 bg-red-100 text-red-700 rounded-lg">
        {{ error }}
      </div>
    {% endif %}
    
    <form id="signinForm" action="{{ "" }}" method="POST" class="bg-white/90 backdrop-blur-sm p-8 mx-auto rounded-2xl shadow-xl w-full max-w-md border border-cyan-100 space-y-5">
      <div>
        <label
          for="email"
          class="block text-cyan-700 font-medium mb-1"
        >
          Email
        </label>
        <input
          id="email"
          name="email"
          type="email"
          required
          value="{{ old.email|default('') }}"
          class="w-full border border-cyan-200 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-cyan-400 focus:border-cyan-400"
        />
        <p id="error-signin-email" class="text-red-600 text-sm mt-1 hidden"></p>
      </div>

      <div>
        <label
          for="password"
          class="block text-cyan-700 font-medium mb-1"
        >
          Password
        </label>
        <input
          id="password"
          name="password"
          type="password"
          required
          class="w-full border border-cyan-200 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-cyan-400 focus:border-cyan-400"
        />
        <p id="error-signin-password" class="text-red-600 text-sm mt-1 hidden"></p>
      </div>

      <div class="flex items-center justify-between">
        <label class="flex items-center text-cyan-700 text-sm">
          <input 
            type="checkbox" 
            name="remember" 
            class="mr-2 accent-cyan-500" 
            {{ old.remember ? 'checked' : '' }}
          />
          Remember me
        </label>
        <a
          href="{{ "" }}"
          class="text-cyan-600 hover:text-amber-500 text-sm font-medium"
        >
          Forgot password?
        </a>
      </div>

      <button
        type="submit"
        class="w-full bg-cyan-500 hover:bg-cyan-600 text-white font-semibold py-2 rounded-lg shadow-md transition-all duration-200"
      >
        Sign In
      </button>

      <div id="signinError" class="hidden mb-2 p-3 bg-red-100 text-red-700 rounded-lg"></div>
      <div class="text-center mt-4">
        <span class="text-gray-600">Don't have an account?</span>
        <a href="/signup" class="text-cyan-600 hover:text-cyan-700 ml-1">Sign up</a>
      </div>
    </form>
  </div>
</section>
{% endblock %}

{% include 'component/AppFooter.twig' %}

<script>
(function(){
  function $(id){return document.getElementById(id);} 
  function showErr(id,msg){const el=$(id); if(el){el.textContent=msg; el.classList.remove('hidden');}}
  function clearErr(id){const el=$(id); if(el){el.textContent=''; el.classList.add('hidden');}}

  const form = $('signinForm');
  if(!form) return;
  form.addEventListener('submit', function(e){
    e.preventDefault();
    clearErr('error-signin-email'); clearErr('error-signin-password'); const g = $('signinError'); if(g) g.classList.add('hidden');
    const email = (form.email.value||'').trim().toLowerCase();
    const password = (form.password.value||'').trim();
    let ok = true;
    if(!email){ showErr('error-signin-email','Email is required'); ok=false; }
    if(!password){ showErr('error-signin-password','Password is required'); ok=false; }
    if(!ok) return;

    let users = [];
    try{ users = JSON.parse(localStorage.getItem('users'))||[]; }catch(e){ users=[]; }
    const user = users.find(u=>u.email===email && u.password===password);
    if(!user){ const g = $('signinError'); if(g){ g.textContent='Invalid email or password'; g.classList.remove('hidden'); } return; }

    // set auth user (safe fields only)
  const auth = { id: user.id, email: user.email, firstName: user.firstName, lastName: user.lastName };
  // clear any sessionExpired marker and set auth
  try { localStorage.removeItem('sessionExpired'); } catch (e) {}
  localStorage.setItem('authUser', JSON.stringify(auth));
    // redirect to dashboard
    window.location.href = '/dashboard';
  });
})();
</script>

</body>
</html>

